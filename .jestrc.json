{
  "testEnvironment": "node",
  "collectCoverage": true,
  "coverageDirectory": "./coverage",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "collectCoverageFrom": [
    "!**/node_modules/**",
    "!<rootDir>/dist/demo/**/*.js",
    "!<rootDir>/dist/test*/**/*.js",
    "!<rootDir>/dist/test*/**/*.spec.js",
    "<rootDir>/dist/**/*.js"
  ],
  "verbose": true,
  "bail": true,
  "roots": [
    "<rootDir>/dist/"
  ],
  "testMatch": [
    "<rootDir>/dist/test*/*.spec.js"
  ]
}
